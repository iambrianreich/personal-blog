---
import type { CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';
import BaseLayout from './BaseLayout.astro';
import CategoryBadge from '../components/CategoryBadge.astro';
import JsonLd from '../components/JsonLd.astro';
import { formatDate } from '../utils/formatDate';

type Props = CollectionEntry<'blog'>['data'] & {
  slug: string;
};

const { title, description, pubDate, updatedDate, heroImage, heroImageAlt, category, slug } = Astro.props;
const articleUrl = new URL(`/blog/${slug}`, Astro.site).toString();
---

<BaseLayout
  title={title}
  description={description}
  image={heroImage?.src}
  article={true}
>
  <JsonLd
    type="BlogPosting"
    data={{
      headline: title,
      description: description,
      image: heroImage?.src,
      datePublished: pubDate.toISOString(),
      dateModified: (updatedDate || pubDate).toISOString(),
      url: articleUrl,
      author: {
        '@type': 'Person',
        name: 'Brian Reich',
        url: 'https://brianreich.dev',
      },
      publisher: {
        '@type': 'Person',
        name: 'Brian Reich',
      },
    }}
  />
  <article class="article">
    <div class="container">
      <header class="article-header">
        <div class="article-meta">
          <CategoryBadge category={category} linked />
          <time datetime={pubDate.toISOString()} class="date">
            {formatDate(pubDate)}
          </time>
          {updatedDate && (
            <span class="updated">
              (Updated: <time datetime={updatedDate.toISOString()}>{formatDate(updatedDate)}</time>)
            </span>
          )}
        </div>
        <h1 class="article-title">{title}</h1>
        {heroImage && (
          <div class="hero-image">
            <Image
              src={heroImage}
              alt={heroImageAlt || title}
              width={1200}
              height={630}
              class="image"
            />
          </div>
        )}
      </header>
      <div class="article-content prose">
        <slot />
      </div>
      <footer class="article-footer">
        <a href="/" class="back-link">&larr; Back to all posts</a>
      </footer>
    </div>
  </article>
</BaseLayout>

<style>
  .article {
    padding: var(--spacing-2xl) 0;
  }

  .article-header {
    max-width: var(--content-max);
    margin-bottom: var(--spacing-2xl);
  }

  .article-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-md);
  }

  .date {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .updated {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    font-style: italic;
  }

  .article-title {
    font-size: 2.5rem;
    line-height: 1.2;
    margin: 0 0 var(--spacing-lg);
  }

  @media (max-width: 768px) {
    .article-title {
      font-size: 2rem;
    }
  }

  .hero-image {
    margin-top: var(--spacing-lg);
    border-radius: 8px;
    overflow: hidden;
  }

  .image {
    width: 100%;
    height: auto;
  }

  .article-content {
    margin-bottom: var(--spacing-2xl);
  }

  .article-footer {
    padding-top: var(--spacing-xl);
    border-top: 1px solid var(--color-border);
  }

  .back-link {
    font-weight: 500;
    color: var(--color-accent);
  }

  .back-link:hover {
    color: var(--color-accent-dark);
  }
</style>
