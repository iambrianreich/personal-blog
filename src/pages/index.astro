---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogCard from '../components/BlogCard.astro';
import Pagination from '../components/Pagination.astro';
import JsonLd from '../components/JsonLd.astro';

const POSTS_PER_PAGE = 10;

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = allPosts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const totalPages = Math.ceil(sortedPosts.length / POSTS_PER_PAGE);
const posts = sortedPosts.slice(0, POSTS_PER_PAGE);
---

<BaseLayout
  title="Home"
  description="Brian Reich's blog about technical management, software development, AI-assisted coding, and recovering from being an individual contributor."
>
  <JsonLd
    type="WebSite"
    data={{
      name: 'Brian Reich',
      url: 'https://brianreich.dev',
      description: 'Technical Manager, Recovering Individual Contributor',
      author: {
        '@type': 'Person',
        name: 'Brian Reich',
      },
    }}
  />
  <div class="home">
    <div class="container">
      <section class="posts">
        {posts.length === 0 ? (
          <p class="no-posts">No posts yet. Check back soon!</p>
        ) : (
          posts.map((post) => (
            <BlogCard
              title={post.data.title}
              description={post.data.description}
              pubDate={post.data.pubDate}
              heroImage={post.data.heroImage}
              heroImageAlt={post.data.heroImageAlt}
              category={post.data.category}
              slug={post.slug}
            />
          ))
        )}
      </section>
      <Pagination currentPage={1} totalPages={totalPages} />
    </div>
  </div>
</BaseLayout>

<style>
  .home {
    padding: var(--spacing-2xl) 0;
  }

  .posts {
    max-width: var(--content-max);
  }

  .no-posts {
    color: var(--color-text-muted);
    font-style: italic;
  }
</style>
