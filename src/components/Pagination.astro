---
interface Props {
  currentPage: number;
  totalPages: number;
  baseUrl?: string;
}

const { currentPage, totalPages, baseUrl = '/blog' } = Astro.props;

function getPageUrl(page: number): string {
  if (page === 1) {
    return baseUrl === '/blog' ? '/' : baseUrl;
  }
  return `${baseUrl}/page/${page}`;
}
---

{totalPages > 1 && (
  <nav class="pagination" aria-label="Blog pagination">
    {currentPage > 1 ? (
      <a href={getPageUrl(currentPage - 1)} class="pagination-link prev">
        &larr; Newer Posts
      </a>
    ) : (
      <span class="pagination-link prev disabled">&larr; Newer Posts</span>
    )}

    <span class="pagination-info">
      Page {currentPage} of {totalPages}
    </span>

    {currentPage < totalPages ? (
      <a href={getPageUrl(currentPage + 1)} class="pagination-link next">
        Older Posts &rarr;
      </a>
    ) : (
      <span class="pagination-link next disabled">Older Posts &rarr;</span>
    )}
  </nav>
)}

<style>
  .pagination {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--spacing-md);
    padding: var(--spacing-xl) 0;
    border-top: 1px solid var(--color-border);
    margin-top: var(--spacing-xl);
  }

  .pagination-link {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-accent);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .pagination-link:hover {
    color: var(--color-accent-dark);
  }

  .pagination-link.disabled {
    color: var(--color-text-muted);
    pointer-events: none;
  }

  .pagination-info {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  @media (max-width: 480px) {
    .pagination {
      flex-wrap: wrap;
      justify-content: center;
    }

    .pagination-info {
      order: -1;
      width: 100%;
      text-align: center;
      margin-bottom: var(--spacing-sm);
    }
  }
</style>
