---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/resume', label: 'Resum√©' },
];

const currentPath = Astro.url.pathname;
---

<header class="header">
  <div class="container header-inner">
    <div class="brand">
      <a href="/" class="brand-link">
        Brian Reich
      </a>
      <p class="tagline">Technical Manager, Recovering Individual Contributor</p>
    </div>
    <nav class="nav">
      <ul class="nav-list">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class:list={['nav-link', { active: currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href)) }]}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    border-bottom: 1px solid var(--color-border);
    background-color: var(--color-bg);
  }

  .header-inner {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    padding-top: var(--spacing-lg);
    padding-bottom: var(--spacing-lg);
  }

  @media (min-width: 640px) {
    .header-inner {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }
  }

  .brand-link {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text);
    text-decoration: none;
  }

  .brand-link:hover {
    color: var(--color-accent);
  }

  .tagline {
    margin: var(--spacing-xs) 0 0;
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .nav-list {
    display: flex;
    gap: var(--spacing-lg);
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .nav-link {
    color: var(--color-text-muted);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .nav-link:hover,
  .nav-link.active {
    color: var(--color-accent);
  }
</style>
